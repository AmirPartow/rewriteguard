# =============================================================================
# RewriteGuard Backend â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# For production deployment, see .env.production
# =============================================================================

# --- Application ---
APP_NAME=rewriteguard-backend
APP_VERSION=0.1.0
ENV=dev                          # dev | prod
LOG_LEVEL=INFO                   # DEBUG | INFO | WARNING | ERROR

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+psycopg2://rewriteguard:<YOUR_PASSWORD>@localhost:5432/rewriteguard_db

# --- Redis (for rate limiting + caching) ---
REDIS_URL=redis://localhost:6379/0
PARAPHRASE_CACHE_TTL=3600        # Cache TTL in seconds (1 hour)

# --- Rate Limiting ---
RATE_LIMIT=10                    # Max requests per window
RATE_WINDOW=60                   # Window duration in seconds

# --- Stripe (from https://dashboard.stripe.com/apikeys) ---
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id

# --- Frontend URL (for Stripe redirect URLs) ---
FRONTEND_URL=http://localhost:5173

# --- CORS (additional allowed origins, comma-separated) ---
CORS_ORIGINS=

# --- AWS (only needed for production logging) ---
AWS_REGION=us-west-2
