# =============================================================================
# RewriteGuard Backend â€” Production Environment Variables
# =============================================================================
# Copy this file to .env on your EC2 instance and fill in real values.
# These are used by docker-compose.yml
# =============================================================================

# --- Application ---
APP_NAME=rewriteguard-backend
APP_VERSION=0.1.0
ENV=prod
LOG_LEVEL=INFO

# --- Database Password (used by both API and PostgreSQL containers) ---
# Change this to a strong password!
DB_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD

# --- Database (auto-configured by Docker Compose, no need to change) ---
DATABASE_URL=postgresql+psycopg2://rewriteguard:${DB_PASSWORD}@postgres:5432/rewriteguard_db

# --- Redis (auto-configured by Docker Compose, no need to change) ---
REDIS_URL=redis://redis:6379/0
PARAPHRASE_CACHE_TTL=3600

# --- Rate Limiting ---
RATE_LIMIT=30
RATE_WINDOW=60

# --- Stripe (from https://dashboard.stripe.com/apikeys) ---
# Use sk_test_ keys while testing, switch to sk_live_ for production
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id

# --- Frontend URL (for Stripe redirect URLs) ---
FRONTEND_URL=https://rewritguard.com

# --- CORS (additional allowed origins, comma-separated) ---
CORS_ORIGINS=
